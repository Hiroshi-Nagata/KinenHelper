<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgressFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_progress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vertical_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/text_smoking_cessation_goal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/title_progress_fragment"
                android:textSize="@dimen/dimen_50dp"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_target_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1æ—¥"
                android:textSize="@dimen/dimen_20dp"
                app:layout_constraintTop_toBottomOf="@+id/text_smoking_cessation_goal"
                app:layout_constraintLeft_toLeftOf="@+id/text_smoking_cessation_goal"
                app:layout_constraintRight_toRightOf="@+id/vertical_guideline"/>

            <Button
                android:id="@+id/button_set_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_set_target"
                android:textSize="@dimen/dimen_10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <View
                android:id="@+id/view_image_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/text_cheering_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_cheering_message1"
                app:layout_constraintTop_toBottomOf="@+id/view_image_progress"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>